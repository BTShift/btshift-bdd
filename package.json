{
  "name": "btshift-bdd",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:api && npm run test:ui",
    "test:api": "playwright test tests/api",
    "test:api:happy": "playwright test tests/api --grep='happy-path' --reporter=html",
    "test:api:edge": "playwright test tests/api --grep='edge-cases' --reporter=html",
    "test:ui": "playwright test tests/ui --reporter=html --output=test-results/ui",
    "test:ui:happy": "playwright test tests/ui --grep='happy-path' --reporter=html",
    "test:ui:edge": "playwright test tests/ui --grep='edge-cases' --reporter=html",
    "test:integration": "playwright test tests/integration --reporter=html --output=test-results/integration",
    "test:bdd": "cucumber-js",
    "test:all": "npm run test:api && npm run test:ui && npm run test:integration",
    "test:debug": "SKIP_CLEANUP_AFTER=true playwright test --debug",
    "test:debug:api": "SKIP_CLEANUP_AFTER=true playwright test tests/api --debug",
    "test:no-cleanup": "SKIP_CLEANUP_BEFORE=true SKIP_CLEANUP_AFTER=true playwright test",
    "test:keep-data": "SKIP_CLEANUP_AFTER=true playwright test",
    "test:report": "playwright show-report",
    "test:report:api": "playwright show-report test-results/api",
    "test:report:ui": "playwright show-report test-results/ui",
    "playwright:install": "playwright install chromium",
    "generate:clients": "ts-node scripts/generate-clients.ts",
    "setup": "npm install && npm run playwright:install && npm run generate:clients",
    "clean": "rm -rf test-results playwright-report dist lib/clients",
    "cleanup": "ts-node scripts/cleanup.ts",
    "cleanup:check": "ts-node scripts/cleanup.ts --dry-run",
    "pretest": "echo 'Tests will automatically cleanup before and after execution'",
    "posttest": "echo 'Cleanup complete. Run npm run cleanup manually if needed'",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:clean": "rm -rf allure-results allure-report",
    "test:allure": "npm run test:api && npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "bdd",
    "testing",
    "api",
    "ui",
    "microservices",
    "playwright",
    "cucumber"
  ],
  "author": "BTShift Team",
  "license": "ISC",
  "description": "Comprehensive BDD testing suite for BTShift multi-tenant platform with API-first testing approach",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/pretty-formatter": "^2.1.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "openapi-typescript-codegen": "^0.29.0",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@btshift/client-management-types": "^4.1.0",
    "@btshift/identity-types": "^8.0.0",
    "@btshift/tenant-management-types": "^3.0.0",
    "openapi-fetch": "^0.14.0"
  }
}
