    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
